rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             (request.auth.token.email == 'erandi@panzaverde.com' ||
              request.auth.token.email == 'erandi@panzaverde.store');
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Products collection - public read, admin-only write
    match /products/{productId} {
      // Anyone can read products (public catalog)
      allow read: if true;
      
      // Only admin can create, update, or delete products
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // User profiles collection (for future buyer accounts)
    match /users/{userId} {
      // Users can read their own profile, admin can read all
      allow read: if isAdmin() || 
                     (isAuthenticated() && request.auth.uid == userId);
      
      // Users can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own profile
      allow update: if isAuthenticated() && request.auth.uid == userId;
      
      // Only admin can delete user profiles
      allow delete: if isAdmin();
    }
    
    // Allow list queries on users (needed for admin onSnapshot)
    match /users/{document=**} {
      allow list: if isAdmin();
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Admin can read all orders, users can read their own
      allow read: if isAdmin() || 
                     (isAuthenticated() && 
                      resource != null && 
                      resource.data.userId == request.auth.uid);
      
      // Authenticated users can create their own orders, admin can create any order
      allow create: if isAuthenticated() && 
                       (request.resource.data.userId == request.auth.uid || 
                        (isAdmin() && request.resource.data.createdBy == 'admin'));
      
      // Only admin can update or delete orders
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Allow list queries on orders (needed for onSnapshot)
    match /orders/{document=**} {
      allow list: if isAdmin();
    }
    
    // Categories collection
    match /categories/{categoryId} {
      // Anyone can read categories (public)
      allow read: if true;
      
      // Only admin can create, update, or delete categories
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Blog posts collection
    match /blogPosts/{postId} {
      // Anyone can read blog posts (public)
      allow read: if true;
      
      // Only admin can create, update, or delete blog posts
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Allow list queries on blogPosts (needed for onSnapshot)
    match /blogPosts/{document=**} {
      allow list: if true;
    }
    
    // Chatbot messages collection
    match /chatbot_messages/{messageId} {
      // Anyone can create messages (for chatbot functionality)
      allow create: if true;
      
      // Only admin can read all messages
      allow read: if isAdmin();
    }
    
    // Chatbot conversations collection
    match /chatbot_conversations/{conversationId} {
      // Anyone can create conversations (for chatbot functionality)
      allow create: if true;
      
      // Only admin can read all conversations
      allow read: if isAdmin();
    }
    
    // Allow list queries on chatbot conversations (needed for onSnapshot)
    match /chatbot_conversations/{document=**} {
      allow list: if isAdmin();
    }
    
    // Contact form submissions collection
    match /contact_submissions/{submissionId} {
      // Anyone can create contact submissions
      allow create: if true;
      
      // Only admin can read contact submissions
      allow read: if isAdmin();
    }
    
    // Allow list queries on contact submissions (needed for admin onSnapshot)
    match /contact_submissions/{document=**} {
      allow list: if isAdmin();
    }
    
    // Admin settings collection (optional, for future use)
    match /admin/{document=**} {
      // Only admin can read/write admin settings
      allow read, write: if isAdmin();
    }
    
    // Chatbot training collection
    match /chatbot_training/{trainingId} {
      // Only admin can read/write training data
      allow read, write: if isAdmin();
    }
    
    // Inventory collection
    match /inventory/{inventoryId} {
      // Only admin can read/write inventory
      allow read, write: if isAdmin();
    }
    
    // Allow list queries on inventory (needed for onSnapshot)
    match /inventory/{document=**} {
      allow list: if isAdmin();
    }
    
    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

